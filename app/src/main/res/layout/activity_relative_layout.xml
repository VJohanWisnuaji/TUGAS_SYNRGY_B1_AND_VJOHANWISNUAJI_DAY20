<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:text="Penggunaan Relative Layout"
        android:textSize="32sp" />

    <ImageView
        android:id="@+id/iv_one"
        android:layout_width="wrap_content"
        android:layout_height="128dp"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:layout_below="@+id/tv_title"
        android:layout_gravity="center"
        android:layout_marginTop="33dp"
        android:contentDescription="try"
        android:src="@drawable/test_launcher_foreground" />

    <TextView
        android:id="@+id/tv_text1"
        android:layout_width="190dp"
        android:layout_height="37dp"
        android:layout_below="@+id/tv_title"
        android:layout_alignTop="@id/iv_one"
        android:layout_alignBottom="@id/iv_one"
        android:layout_alignParentEnd="true"
        android:layout_gravity="center"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="68dp"
        android:layout_toEndOf="@+id/iv_one"
        android:gravity="center"
        android:text="Text Gambar 1"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/iv_two"
        android:layout_width="wrap_content"
        android:layout_height="128dp"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:layout_below="@+id/iv_one"
        android:layout_gravity="center"
        android:layout_marginTop="33dp"
        android:contentDescription="try"
        android:src="@drawable/test_launcher_foreground" />

    <TextView
        android:id="@+id/tv_text2"
        android:layout_width="190dp"
        android:layout_height="37dp"
        android:layout_alignTop="@id/iv_two"
        android:layout_alignEnd="@id/iv_two"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="68dp"
        android:layout_toEndOf="@+id/iv_two"
        android:gravity="center"
        android:text="Text Gambar 2"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tv_text3"
        android:layout_width="190dp"
        android:layout_height="37dp"
        android:layout_below="@+id/tv_text2"
        android:layout_alignEnd="@id/iv_two"
        android:layout_alignBottom="@id/iv_two"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="68dp"
        android:layout_toEndOf="@+id/iv_two"
        android:gravity="center"
        android:text="Text Gambar 2.1"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/iv_three"
        android:layout_width="match_parent"
        android:layout_height="128dp"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:layout_below="@+id/iv_two"
        android:layout_gravity="center"
        android:layout_marginTop="33dp"
        android:contentDescription="try"
        android:src="@drawable/bg_test" />
    <TextView
        android:id="@+id/tv_text4"
        android:layout_width="190dp"
        android:layout_height="37dp"
        android:layout_alignTop="@+id/iv_three"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center"
        android:layout_below="@+id/iv_two"
        android:gravity="center"
        android:text="Text Gambar 3"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tv_text5"
        android:layout_width="190dp"
        android:layout_height="37dp"
        android:layout_below="@+id/tv_text4"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="68dp"
        android:gravity="center"
        android:text="Text Gambar 3.1"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tv_text6"
        android:layout_width="190dp"
        android:layout_height="37dp"
        android:layout_below="@+id/tv_text5"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="68dp"
        android:gravity="center"
        android:text="Text Gambar 3.2"
        android:textSize="20sp" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        app:maxImageSize="75dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:src="@drawable/ic_baseline_home_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.896"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.948" />
</RelativeLayout>
