<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TableLayoutActivity">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:text="Penggunaan Table Layout"
            android:textSize="32sp" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <TextView
                android:layout_width="108dp"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_gravity="center"
                android:layout_marginHorizontal="5dp"
                android:background="@drawable/test_launcher_background"
                android:gravity="center"
                android:src="@drawable/test_launcher_foreground"
                android:text="Row 0 Coloumn 0"
                android:textSize="20sp" />

            <TextView
                android:layout_width="108dp"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_gravity="center"
                android:layout_marginHorizontal="5dp"
                android:background="@drawable/test_launcher_background"
                android:gravity="center"
                android:src="@drawable/test_launcher_foreground"
                android:text="Row 0 Coloumn 1"
                android:textSize="20sp" />

            <TextView
                android:layout_width="108dp"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:layout_gravity="center"
                android:layout_marginHorizontal="5dp"
                android:background="@drawable/test_launcher_background"
                android:gravity="center"
                android:src="@drawable/test_launcher_foreground"
                android:text="Row 0 Coloumn 2"
                android:textSize="20sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <TextView
                android:layout_width="108dp"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:layout_marginHorizontal="5dp"
                android:background="@drawable/test_launcher_background"
                android:gravity="center"
                android:src="@drawable/test_launcher_foreground"
                android:text="Row 1 Coloumn 1"
                android:textSize="20sp" />

            <TextView
                android:layout_width="108dp"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:layout_marginHorizontal="5dp"
                android:background="@drawable/test_launcher_background"
                android:gravity="center"
                android:src="@drawable/test_launcher_foreground"
                android:text="Row 1 Coloumn 2"
                android:textSize="20sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <TextView
                android:layout_width="108dp"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:layout_marginHorizontal="5dp"
                android:background="@drawable/test_launcher_background"
                android:gravity="center"
                android:src="@drawable/test_launcher_foreground"
                android:text="Row 2 Coloumn 0"
                android:textSize="20sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="end">

            <TextView
                android:layout_width="108dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:layout_marginHorizontal="5dp"
                android:background="@drawable/test_launcher_background"
                android:contentDescription="try"
                android:gravity="center"
                android:src="@drawable/test_launcher_foreground"
                android:text="Row 3 Coloumn 0"
                android:textSize="20sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="start">

            <ImageButton
                android:id="@+id/ib_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_gravity="center"
                android:background="@drawable/test_launcher_background"
                android:contentDescription="try"
                android:src="@drawable/ic_baseline_home_24" />

            <TextView
                android:layout_width="108dp"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:layout_marginHorizontal="5dp"
                android:background="@drawable/test_launcher_background"
                android:contentDescription="try"
                android:gravity="center"
                android:src="@drawable/test_launcher_foreground"
                android:text="Row 4 Coloumn 2"
                android:textSize="20sp" />
        </TableRow>

    </TableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>